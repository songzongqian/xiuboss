<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="173px"
    android:background="#FFFFFF"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    >

    <TextView
        android:id="@+id/call_name"
        android:layout_width="wrap_content"
        android:layout_height="25px"
        android:layout_marginTop="16px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textColor="#333333"
        android:textSize="18px"
        />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/call_name"
        android:layout_marginTop="16px"
        android:background="#F6F6F6"/>

    <TextView
        android:id="@+id/call_number"
        android:layout_width="wrap_content"
        android:layout_height="22px"
       android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView28"
        android:layout_marginTop="18px"
        android:text="0710-3780521"
        android:textSize="16px"
        android:textColor="#666666"
        />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/call_number"
        android:layout_marginTop="17px"
        android:background="#F6F6F6"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57px"
        android:layout_below="@+id/textView33"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/call_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="57px"
            android:gravity="center"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="18px"
            />
        <TextView
            android:id="@+id/call_dial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="57px"
            android:gravity="center"
            android:text="拨打"
            android:textColor="#C6A04D"
            android:textSize="18px"
            android:background="#F2F2F2"
            />

    </LinearLayout>



</RelativeLayout>