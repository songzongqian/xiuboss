<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="254px"
    android:background="@drawable/button_shap_xiuxiu"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    >

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="24px"
        android:layout_height="24px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px"
        app:srcCompat="@drawable/home_icon_close" />

    <ImageView
        android:id="@+id/popup_amount"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginTop="27px"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/index_icon_sign"
        />

    <TextView
        android:id="@+id/popup_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/popup_amount"
        android:layout_marginTop="8px"
        android:text="领取成功"
        android:textColor="#C6A04D"
        android:textSize="24px"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/popup_lin"
        android:layout_width="wrap_content"
        android:layout_height="20px"
        android:orientation="horizontal"
        android:layout_marginTop="15px"
        android:layout_below="@+id/popup_success"
        android:layout_centerHorizontal="true"

        >
        <TextView
            android:id="@+id/popup_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24元"
            android:textSize="14px"
            android:textColor="#666666"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popup_money"
            android:layout_centerHorizontal="true"
            android:text=" 已经存入您的账户余额"
            android:textSize="14px"
            android:textColor="#999999"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_below="@+id/popup_lin"
        android:layout_marginTop="27px"
        android:layerType="software"
        android:background="#DCDCDC"
        />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="150px"
        android:layout_height="32px"
        android:layout_below="@+id/textView31"
        android:layout_marginTop="12px"
        android:layout_marginBottom="13px"
        android:text="查看交易记录"
        android:textColor="#FFFFFF"
        android:textSize="16px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_popup"
        />

</RelativeLayout>