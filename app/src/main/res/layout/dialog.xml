<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_context"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="34dp"
        android:layout_toStartOf="@+id/tv_dialog_context"
        android:text="Button" />

    <Button
        android:id="@+id/btn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_confirm"
        android:layout_alignBottom="@+id/btn_confirm"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/tv_dialog_context"
        android:text="Button" />
</RelativeLayout>