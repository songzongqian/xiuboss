<?xml version="1.0" encoding="utf-8"?>
    <com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="235px"
        android:background="@drawable/button_shap_xiuxiu"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"

        >
    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="24px"
        android:layout_height="24px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px"
        app:srcCompat="@drawable/home_icon_close" />

    <TextView
        android:id="@+id/popup_amount"
        android:layout_width="wrap_content"
        android:layout_height="28px"
        android:layout_marginTop="30px"
        android:layout_centerHorizontal="true"
        android:text="奖励金额"
        android:textSize="20px"
        android:textColor="#C6A04D"
        />

    <TextView
        android:id="@+id/popup_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/popup_amount"
        android:layout_marginTop="29px"
        android:text="24"
        android:textColor="#666666"
        android:textSize="24px"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8px"
        android:text="领取后24小时之内不可提现"
        android:textSize="14px"
        android:textColor="#999999"
        />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_below="@+id/textView30"
        android:layout_marginTop="28px"
        android:layerType="software"
        android:background="#DCDCDC"
        />

    <Button
        android:id="@+id/btn_reward"
        android:layout_width="wrap_content"
        android:layout_height="32px"
        android:layout_below="@+id/textView31"
        android:layout_marginTop="12px"
        android:layout_alignRight="@+id/textView31"
        android:layout_marginBottom="13px"
        android:text="领取奖励"
        android:textColor="#FFFFFF"
        android:textSize="16px"
        android:background="@drawable/button_popup"
        />

    <Button
        android:id="@+id/btn_next_reward"
        android:layout_width="wrap_content"
        android:layout_height="32px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView31"
        android:layout_marginBottom="13px"
        android:layout_marginTop="12px"
        android:layout_marginLeft="30px"
        android:text="下次领取"
        android:textColor="#999999"
        android:textSize="16px"
        android:background="@drawable/button_popup_two"
        />
    </com.zhy.autolayout.AutoRelativeLayout>
