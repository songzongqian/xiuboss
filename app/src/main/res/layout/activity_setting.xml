<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="116px"
    android:background="#FFFFFF"
    android:layout_marginTop="15px"
    >

<!--  版本更新 upData   清除缓存 clear -->


    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="22px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15px"
        android:layout_marginStart="15px"
        android:layout_marginTop="18px"
        android:text="清除缓存"
        android:textColor="#333333"
        android:textSize="16px"
        />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22"
        android:layout_centerVertical="true"
       android:background="#F6F6F6"

        />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="22px"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_marginTop="76px"
        android:text="检测更新"
        android:textColor="#333333"
        android:textSize="16px"
        />

    <ImageView
        android:id="@+id/setting_image_clear"
        android:layout_width="8px"
        android:layout_height="14px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView22"
        android:layout_marginRight="15px"
        android:layout_marginTop="23px"
        android:src="@mipmap/common_arrow2x" />

    <ImageView
        android:id="@+id/setting_image_updata"
        android:layout_width="8px"
        android:layout_height="14px"
        android:layout_alignEnd="@+id/setting_image_clear"
        android:layout_alignRight="@+id/setting_image_clear"
        android:layout_alignTop="@+id/textView24"
        android:src="@mipmap/common_arrow2x" />

    <TextView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="22px"
        android:layout_alignTop="@+id/textView22"
        android:layout_marginRight="20px"
        android:layout_toLeftOf="@+id/setting_image_clear"
        android:layout_toStartOf="@+id/setting_image_clear"
        android:text="TextView"
        android:textColor="#333333"
        android:textSize="16px"
        android:visibility="gone" />

</RelativeLayout>
    <Button
        android:id="@+id/button_exit"
        android:layout_width="match_parent"
        android:layout_height="58px"
        android:layout_marginTop="10px"
        android:background="#FFFFFF"
        android:text="退出当前账号"
        android:textSize="18px"
        android:textColor="#C6A04D"

        />

</LinearLayout>