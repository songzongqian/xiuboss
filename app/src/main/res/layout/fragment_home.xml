                android:textSize="12px" />

            <TextView
                android:id="@+id/Service_Charge_money"
                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:text="2245 "
                android:textColor="#C6A04D"
                android:textSize="12px" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:text="元，超出后每笔收取 "
                android:textColor="#999999"
                android:textSize="12px" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="17px"
