<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    tools:context="com.byx.xiuboss.xiuboss.Mvp.fragmment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/home_scan_image"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11px"
            android:layout_marginStart="11px"
            android:layout_marginTop="8px"
            android:src="@mipmap/index_icon_scan" />

        <TextView
            android:id="@+id/home_title"
            android:layout_width="73px"
            android:layout_height="25px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"
            android:text="雅斯超市"
            android:textColor="#333333"
            android:textSize="18px" />

        <ImageView
            android:id="@+id/home_wechat_image"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8px"
            android:layout_marginTop="8px"
            android:src="@mipmap/index_icon_wechat" />

        <TextView
            android:id="@+id/total_fee"
            android:layout_width="wrap_content"
            android:layout_height="37px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80px"
            android:layout_marginTop="52px"
            android:text="625"
            android:textColor="#C6A04D"
            android:textSize="26px" />

        <TextView
            android:id="@+id/customer"
            android:layout_width="wrap_content"
            android:layout_height="37px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="94px"
            android:layout_marginTop="52px"
            android:text="4"
            android:textColor="#C6A04D"
            android:textSize="26px" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="14px"
            android:layout_below="@+id/total_fee"
            android:layout_marginLeft="78px"
            android:layout_marginTop="5px"
            android:text="返现总收入"
            android:textColor="#999999"
            android:textSize="10px" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="14px"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/customer"
            android:layout_marginRight="78px"
            android:layout_marginTop="5px"
            android:text="带来的顾客"
            android:textColor="#999999"
            android:textSize="10px" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/textView21"
            android:layout_marginTop="15px"
            android:background="#F6F6F6"
             />

<LinearLayout
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="55px"
    android:orientation="horizontal"
    android:layout_below="@id/textView18"
    >
    <LinearLayout
        android:id="@+id/receivables"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="44px"
     android:gravity="center"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/index_icon_receivables"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收款"
        android:textSize="14px"
        android:textColor="#666666"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/business"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="44px"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/index_icon_money"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家"
            android:textSize="14px"
            android:textColor="#666666"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/commodity"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="44px"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/index_icon_money"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品"
            android:textSize="14px"
            android:textColor="#666666"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wallet"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="44px"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/index_icon_money"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"
            android:textSize="14px"
            android:textColor="#666666"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/receipt_code"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="44px"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/index_icon_receivables"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款码"
            android:textSize="14px"
            android:textColor="#666666"
            />
    </LinearLayout>

</LinearLayout>

