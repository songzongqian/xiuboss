    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_Totalamount"
        android:layout_width="match_parent"
        android:layout_height="99px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="13px"
        android:layout_marginTop="10px"
        android:background="@drawable/button_shap_xiuxiu">

        <TextView

            android:id="@+id/Totalamount"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15px"
            android:layout_marginStart="15px"
            android:layout_marginTop="22px"
            android:text="今日收款38笔，退款0笔，合计"
            android:textColor="#666666"
            android:textSize="14px" />

        <TextView
            android:id="@+id/Totalamount_money"
            android:layout_width="wrap_content"
            android:layout_height="37px"
            android:layout_alignLeft="@+id/Totalamount"
            android:layout_alignStart="@+id/Totalamount"
            android:layout_marginTop="46px"
            android:text="8,283元"
            android:textColor="#C6A04D"
            android:textSize="26px" />

        <TextView
            android:id="@+id/yesterday_money"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="18px"
            android:layout_marginRight="18px"
            android:layout_marginTop="61px"
            android:text="昨日实时：8473元"
            android:textColor="#999999"
            android:textSize="12px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="217px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="13px"
        android:layout_marginTop="10px"
        android:background="@drawable/button_shap_xiuxiu">


        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15px"
            android:layout_marginStart="15px"
            android:layout_marginTop="22px"
            android:text="当前收款余额累计"
            android:textColor="#666666"
            android:textSize="14px" />

        <ImageView
            android:id="@+id/home_icon_tips"
            android:layout_width="17px"
            android:layout_height="17px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="21px"
            android:src="@mipmap/index_icon_tips" />

        <TextView
            android:id="@+id/balance_money"
            android:layout_width="wrap_content"
            android:layout_height="37px"
            android:layout_alignLeft="@+id/textView29"
            android:layout_alignStart="@+id/textView29"
            android:layout_marginTop="46px"
            android:text="18,283元"
            android:textColor="#C6A04D"
            android:textSize="26px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16px"
            android:layout_marginTop="61px"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:text="等级 "
                android:textColor="#999999"
                android:textSize="12px" />

            <TextView
                android:id="@+id/dengji"
                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:text="X3"
                android:textColor="#999999"
                android:textSize="12px"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:text="奖励"
                android:textColor="#999999"
                android:textSize="12px" />

            <TextView
                android:id="@+id/grade_money"
                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:text="14"
                android:textColor="#999999"
                android:textSize="12px"
                android:textStyle="bold" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBarHorizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15px"
            android:layout_marginTop="122px"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_alignLeft="@+id/balance_money"
            android:layout_alignStart="@+id/balance_money"
            android:layout_below="@+id/progressBarHorizontal"
            android:layout_marginTop="8px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一等级"
                android:textColor="#9B9B9B"
                android:textSize="12px" />

            <TextView

                android:id="@+id/backward_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X4"
                android:textColor="#9B9B9B"
                android:textSize="12px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还差"
                android:textColor="#9B9B9B"
                android:textSize="12px" />

            <TextView
                android:id="@+id/difference_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1717"
                android:textColor="#C6A04D"
                android:textSize="12px" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元，奖励 "
                android:textColor="#9B9B9B"
                android:textSize="12px" />

            <TextView
                android:id="@+id/reward_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:textColor="#C6A04D"
                android:textSize="12px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#9B9B9B"
                android:textSize="12px" />
        </LinearLayout>


        <Button

            android:id="@+id/button_reward"
            android:layout_width="wrap_content"
            android:layout_height="32px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="166px"
            android:background="@drawable/button_reward"
            android:text="领取奖励"
            android:textColor="#FFFFFF"
            android:textSize="16px" />
        <Button
            android:visibility="gone"
            android:id="@+id/button_reward_two"
            android:layout_width="wrap_content"
            android:layout_height="32px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="166px"
            android:background="@drawable/button_popup_two"
            android:text="领取时间未到"
            android:textColor="#FFFFFF"
            android:textSize="11px" />

        <TextView
            android:id="@+id/mid_money"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="98px"
            android:text="10,000"
            android:textColor="#999999"
            android:textSize="12px" />

        <TextView
            android:id="@+id/max_money"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_alignEnd="@+id/home_icon_tips"
            android:layout_alignRight="@+id/home_icon_tips"
            android:layout_marginTop="98px"
            android:text="20,000"
            android:textColor="#999999"
            android:textSize="12px" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignTop="@+id/home_icon_tips"
            android:text="奖励规则"
            android:textColor="#666666"
            android:textSize="14px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="124px"
        android:layout_marginLeft="15px"
