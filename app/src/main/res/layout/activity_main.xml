    <RelativeLayout
        android:id="@+id/relaMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#fff"
            android:id="@+id/actionbar_layout_tmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/actionbar_home_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home_image"
                        android:layout_width="26px"
                        android:layout_height="26px"
                        />

                    <TextView
                        android:id="@+id/home_text"
                        android:layout_width="26px"
                        android:layout_height="16px"
                        android:text="首页"
                        android:textColor="#999999"
                        android:textSize="12px" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
            android:id="@+id/actionbar_bill_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bill_image"
                    android:layout_width="26px"
                    android:layout_height="26px"
                   />

                <TextView
                    android:id="@+id/bill_text"
                    android:layout_width="26px"
                    android:layout_height="16px"
                    android:text="账单"
                    android:textColor="@color/action_bar_txt_color"
                    android:textSize="12px" />
            </LinearLayout>
        </RelativeLayout>
