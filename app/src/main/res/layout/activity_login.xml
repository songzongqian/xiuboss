<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <include layout="@layout/title_item"/>

    <RelativeLayout
        android:id="@+id/translate"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/de_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:src="@drawable/login_icon_logo" />

    </RelativeLayout>

    <LinearLayout

        android:layout_marginTop="33px"
        android:id="@+id/ll_name_psw"
        android:layout_width="match_parent"
        android:layout_height="117px"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_logo"
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_marginLeft="15px"
                android:text="手机号"
                android:textSize="14px"
                android:layout_marginTop="21px"
                android:textColor="#333333"

                />

            <com.byx.xiuboss.xiuboss.Mvp.view.ClearWriteEditText
                android:id="@+id/login_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginLeft="76px"
                android:layout_marginTop="21px"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入用户名"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#2C2C2C"
                android:textColorHint="#C8C8C8"
                android:textSize="14px"/>

            <View
                android:id="@+id/user_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/login_userName"
                android:layout_marginTop="17px"
                android:background="#F6F6F6"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/password_logo"
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_marginLeft="15px"
                android:text="密   码"
                android:textSize="14px"
                android:layout_marginTop="18px"
                android:textColor="#333333"/>

            <com.byx.xiuboss.xiuboss.Mvp.view.ClearWriteEditText
                android:id="@+id/login_passWord"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="76px"
                android:layout_marginTop="18px"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#2C2C2C"
                android:textColorHint="#C8C8C8"
                android:textSize="14px"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/ll_name_psw"
            android:layout_marginTop="15px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="15px"
            android:background="#F6F6F6"/>

    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10px"
            android:layout_marginRight="25px"
            android:text="忘记密码"
            android:textColor="#C6A04D"
            android:textSize="14px"

            />
    </RelativeLayout>

    <Button

        android:id="@+id/btn_logins"
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20px"
        android:background="@drawable/button_shape"
        android:text="登陆"
        android:textColor="#999999"
        android:textSize="18px"/>
    <Button
        android:visibility="gone"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20px"
        android:background="@drawable/button_tz"
        android:text="登陆"
        android:textColor="#FFFFFF"
        android:textSize="18px"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="还没有账号?"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="立即注册"
            android:textColor="#57D9D9"
            android:textSize="12sp"/>

    </LinearLayout>
</LinearLayout>
