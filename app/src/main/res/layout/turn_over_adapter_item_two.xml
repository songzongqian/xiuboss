<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F8F8F8"
    android:layout_marginTop="17px"
    >

    <TextView
        android:visibility="gone"
        android:id="@+id/text_time_item_two"
        android:layout_width="match_parent"
        android:layout_height="17px"
        android:layout_marginTop="1px"
        android:background="#F8F8F8"
        android:paddingLeft="30px"
        android:text="历史收款记录"
        android:textColor="#999999"
        android:textSize="12px" />

    <RelativeLayout
        android:id="@+id/recycler_wwj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="8px"
        android:background="@drawable/button_shap_xiuxiu"
       >


            <TextView
                android:id="@+id/text_money_item_two"
                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:layout_marginLeft="15px"
                android:layout_marginTop="22px"
                android:text="10月01日收款38笔，退款0笔，合计"
                android:textColor="#9B9B9B"
                android:textSize="12px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_content_item_two"
                android:layout_width="wrap_content"
                android:layout_height="37px"
                android:layout_marginLeft="15px"
                android:layout_marginTop="46px"
                android:text="收款28笔,返现2笔"
                android:textColor="#C6A04D"
                android:textSize="26px" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="7px"
            android:layout_height="12px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:src="@mipmap/common"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_alignBaseline="@+id/text_content_item_two"
            android:layout_alignBottom="@+id/text_content_item_two"
            android:layout_toEndOf="@+id/text_content_item_two"
            android:layout_toRightOf="@+id/text_content_item_two"
            android:text="元"
            android:textColor="#C6A04D"
            android:textSize="14px" />
    </RelativeLayout>
</LinearLayout>